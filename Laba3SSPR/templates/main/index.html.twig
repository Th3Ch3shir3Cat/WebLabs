{% extends 'base.html.twig' %}


{% block title %}{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css?family=Oswald:400,700&display=swap&subset=cyrillic,cyrillic-ext" rel="stylesheet">
    <link rel = "stylesheet" href = "/assets/css/bootstrap.min.css">
    <link rel = "stylesheet" href = "/assets/css/main.css">
{% endblock %}


{% block header %}
    <div class = "container">
        <div class = "row">
            <div class="col-lg-3">
                <img src="/assets/images/logo.png" alt="logo" class="logo">
            </div>
            <div class="col-lg-9 ml-auto">
                <nav>
                    <ul class = "menu d-flex justify-content-center">
                        <li class = "menu__item">
                            <a href = "/main">
                                Главная
                            </a>
                        </li>
                        <li class = "menu__item">
                            <a href = "#">
                                О компании
                            </a>
                        </li>
                        <li class = "menu__item">
                            <a href = "/type/technika">
                                Спецтехника
                            </a>
                        </li>
                        <li class = "menu__item">
                            <a href = "#">
                                Прайс-лист
                            </a>
                        </li>
                        <li class = "menu__item">
                            <a href = "#">
                                Фотогалерея
                            </a>
                        </li>
                        <li class = "menu__item">
                            <a href = "#">
                                Контакты
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
        <div class = "row">
            <div class = "col-lg-6">
                <div class = "offer">
                    <h1 class = "offer__title">
                        Лучшая спецтехника в Барнауле
                    </h1>
                    <div class = "offer__intro">
                        Делаем всё на этой планете
                    </div>
                    <p class = "offer__text">
                        Ток по наличному расчету
                    </p>
                </div>
            </div>
            <div class = "col-lg-5">
                <img src = "/assets/images/cars.png" class = "met" alt = "met">
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}

    <section id = "information" class = "information">
        <div class = "container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="title">
                        <h2 class="title__main">
                            Лучший выбор
                        </h2>
                        <p class="title__text">
                            Основываясь на количестве заказов за последний месяц
                        </p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4">
                    <div class="feature">
                        <img src = "/assets/images/kmd.png" class = "kmd" alt = "kmd">
                        <div class = "feature__block">
                            <h5 class = "feature__title">
                                КМД машина для уборки снега
                            </h5>
                            <p class = "feature__text">
                                Год: 2015<br>
                                Колесная база: 3690 мм<br>
                                Надстройка: пескоразбрасывающее устройство
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="feature">
                        <img src = "/assets/images/evaluator.png" class = "evaluator" alt = "evaluator">
                        <div class = "feature__block">
                            <h5 class = "feature__title">
                                Эвакуатор ГАЗель с платформой
                            </h5>
                            <p class = "feature__text">
                                Год: 2016<br>
                                Колесная база: 4000 мм<br>
                                Надстройка: лебедка
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="feature">
                        <img src = "/assets/images/beeton.png" class = "beeton" alt = "beeton">
                        <div class = "feature__block">
                            <h5 class = "feature__title">
                                Автобетоновоз Scania
                            </h5>
                            <p class = "feature__text">
                                Год: 2015<br>
                                Колесная база: 3700 мм<br>
                                Надстройка: бетоносмеситель LIEBHERR HTM
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="feature">
                        <img src = "/assets/images/tractor.png" class = "tractor" alt = "tractor">
                        <div class = "feature__block">
                            <h5 class = "feature__title">
                                Фронтальный погрузчик JCB 455ZX
                            </h5>
                            <p class = "feature__text">
                                Год: 2019<br>
                                Колесная база: 7968 мм<br>
                                Надстройка: ковш общего назначения
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="feature">
                        <img src = "/assets/images/kimball.png" class = "kimball" alt = "kimball">
                        <div class = "feature__block">
                            <h5 class = "feature__title">
                                Зерноуборочный комбайн
                            </h5>
                            <p class = "feature__text">
                                Год: 2017<br>
                                Колесная база: 5000 мм<br>
                                Надстройка: жатвенный захват
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="feature">
                        <img src = "/assets/images/banzai.png" class = "banzai" alt = "banzai">
                        <div class = "feature__block">
                            <h5 class = "feature__title">
                                Бензовоз
                            </h5>
                            <p class = "feature__text">
                                Год: 2020<br>
                                Колесная база: 8980 мм<br>
                                Надстройка: цистерна
                            </p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
{% endblock %}